<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.esigelec.bluetoothbot.ControlsActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="384dp"
        android:layout_height="509dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="367dp"
            android:layout_height="78dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="425dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button9"
            android:layout_centerVertical="true"
            android:text="^"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="250dp"
            tools:rotation="180" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:text="^"
            app:layout_constraintBottom_toTopOf="@+id/button7"
            tools:layout_editor_absoluteX="151dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="90"
            android:text="^"
            app:layout_constraintBottom_toTopOf="@+id/button7"
            tools:layout_editor_absoluteX="241dp"
            android:layout_below="@+id/button9"
            android:layout_toEndOf="@+id/button7" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="270"
            android:text="^"
            app:layout_constraintBottom_toTopOf="@+id/button7"
            tools:layout_editor_absoluteX="63dp"
            android:layout_above="@+id/button7"
            android:layout_toStartOf="@+id/button7" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button4"
            android:layout_alignStart="@+id/button4"
            android:layout_marginStart="17dp"
            android:text="Speed"
            tools:layout_editor_absoluteX="303dp"
            tools:layout_editor_absoluteY="281dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button3"
            android:layout_centerHorizontal="true"
            android:text="Console"
            tools:layout_editor_absoluteX="167dp"
            tools:layout_editor_absoluteY="396dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_above="@+id/button3"
            android:layout_alignStart="@+id/button3"
            android:text="+"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="311dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignEnd="@+id/imageButton"
            android:text="-"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="365dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/scrollView2"
            android:layout_alignStart="@+id/scrollView2"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="23dp"
            android:text="Automated"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="391dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/switch3"
            android:layout_alignEnd="@+id/switch3"
            android:layout_marginBottom="15dp"
            android:text="Manual"
            app:layout_constraintBottom_toTopOf="@+id/switch3"
            tools:layout_editor_absoluteX="34dp" />

        <Switch
            android:id="@+id/switch3"
            android:layout_width="44dp"
            android:layout_height="31dp"
            android:layout_above="@+id/textView6"
            android:layout_alignStart="@+id/button5"
            android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            tools:layout_editor_absoluteX="34dp"
            tools:rotation="90" />

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="none"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:layout_editor_absoluteX="143dp"
            tools:layout_editor_absoluteY="35dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            app:srcCompat="@android:drawable/ic_lock_power_off"
            tools:layout_editor_absoluteX="312dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageButton
            android:id="@+id/imageButton4"
            style="@android:style/Widget.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:srcCompat="@drawable/petit_logo"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/scrollView2" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
